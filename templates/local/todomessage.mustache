{{!
    @template block_todo/local/todomessage

    This template renders the main content area for the TODO block.

    Example context (json):
    {
        "message": "This is a message"
    }
}}
<div id="block-todo-message-{{uniqid}}-{{id}}" class="px-2">
    <span data-for="todo-message">{{message}}</span>
</div>
{{#js}}
require(['block_todo/local/components/todomessage'], function(component) {
    component.init('#block-todo-message-{{uniqid}}-{{id}}');
});
{{/js}}